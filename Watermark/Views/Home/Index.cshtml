@model Watermark.Models.Feature
@{

    ViewBag.Title = "Watermark";

}

<form method="post" style="margin-top:15px;" enctype="multipart/form-data">
    <div class="form-group">
        <label>Title</label>
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
    </div>
    <div class="form-group">
        <label>Font Size</label>
        @Html.EditorFor(model => model.FontSize, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
    </div>
    <div class="form-group">
        <label>File input</label>
        <input type="file" multiple name="yuklenecekDosya">
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <div class="form-group">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <span class="text-danger">@Model.ErrorMessage</span>
        }
        else if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <span class="text-success">@Model.SuccessMessage</span>
        }
    </div>
</form>


